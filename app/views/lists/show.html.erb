<h1><%= @list.name %></h1>

<div>
  <h3>Movies:</h3>
  <ul class="list-group">
    <% @movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(movie:movie, list:@list) %>
      <li class="list-group-item"><%= "#{movie.title} (#{movie.rating})"%> <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?"}  %></li>
    <% end %>
  </ul>
</div>

<p><%= link_to "Add a Movie to this List", new_list_bookmark_path(@list), class: "btn btn-warning" %> </p>
<p><%= link_to "See All Lists", root_path, class: "btn btn-primary" %> </p>

